.container
  .row
    .col-lg-6.col-lg-offset-2
      %p
        %b Имя:
        = @customer.name
      %p
        %b Пользователь:
        = @customer.user.name
      %p
        %b Кол-во заказов:
        = @customer.payments_count
      %p
        %b До бесплатной осталось:
        = @customer.free_payment_left
      = link_to 'Edit', edit_customer_path(@customer)
      = link_to 'Back', customers_path
